import random

#create range of possible integers

options = range(1,11)
for i in options:
    print(i)


while True:
    
    #player selects number
    try:
        player_choice = int(input("Select a number from 1 to ten > "))
    except ValueError:
        print("That's not a valid number. Try again, bruh.")
        continue
        
    if player_choice not in options:
        print("That number isn't in the required range.")
        continue
    
    #initialize max range variables and comp_choice
    max_int = 10
    min_int = 1
    comp_choice = 0
    number_of_rounds = 0
    
    print("Type 'higher' if the computer's guess is too low, or 'lower' if the computer's guess is too high.")
    
    while comp_choice != player_choice:
        
        #computer selects number
        options = range(min_int, max_int + 1)
        comp_choice = random.choice(options)
        
        #player is presented with computer number, tells the computer either higher or lower
        player_guidane = str.lower(input("The computer guessed {}. 'higher' or 'lower'?\n".format(comp_choice)))
        if player_guidance != 'higher' or player_guidance != 'lower':
            print("Not a valid instruction. You must write either 'higher' or 'lower'.")
            continue
        
        if player_guidance == 'lower':
            print("The computer's guess was too high. It'll try again.")
            max_int = comp_choice
            number_of_rounds += 1
            continue
        elif player_guidace == 'higher':
            print("The computer's guess wass too low. It'll try again.")
            min_int = comp_choice
            number_of_rounds += 1
            continue
    
    #game ends when computer guesses player's number
    print("Your number was {}. After {} rounds, the computer guessed {}.".format(player_choice, number_of_rounds, comp_choice))
    print("Game over.")
        
    
    


